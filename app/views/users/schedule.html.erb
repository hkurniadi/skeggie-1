<% responses = Array.new(@current_courses.length) %>
<% days = Array.new(@current_courses.length) %>
<% s_times = Array.new(@current_courses.length) %>
<% e_times = Array.new(@current_courses.length) %>
<% events = Array.new(5) %>
<% events.each_with_index do |event,i| %>
    <% event = Array.new() %>
    <% events[i] = event %>
<% end %>

<% @current_courses.each_with_index do |curr, i| %>
	<% for j in 0..10 %> 
		<% responses[i] = HTTParty.get("http://www.sfu.ca/bin/wcm/course-outlines?#{curr.split(" ")[0]}/#{curr.split(" ")[1]}/#{curr.split(" ")[2..3].join("/")}/#{curr.split(" ")[4]}") %>
		<% if responses[i].count != 1 %> <!-- Won't have error message -->
			<% break %>
		<% elsif responses[i].count == 1 && !responses[i].has_key?('errorMessage') %> <!-- Just one result, but not an error -->
			<% break %>
		<% end %>
	<% end %>
	<% days[i] = Array.new(responses[i]["courseSchedule"].length) %>
	<% s_times[i] = Array.new(responses[i]["courseSchedule"].length) %>
	<% e_times[i] = Array.new(responses[i]["courseSchedule"].length) %>
	<% days[i].each_with_index do |day, j| %>
		<% day = responses[i]["courseSchedule"][j]["days"].split(", ") %>
		<% day.each_with_index do |w_day, k| %>
			<% w_set = case w_day %>
			<% when "Mo" %> 
				<% 1 %>
			<% when "Tu" %>
				<% 2 %>
			<% when "We" %>
				<% 3 %>
			<% when "Th" %>
				<% 4 %>
			<% when "Fr" %>
				<% 5 %>
			<% end %>
			<% day[k] = w_set %>
		<% end %>
		<% days[i][j] = day %>
		<% s_times[i][j]= responses[i]["courseSchedule"][j]["startTime"] %>
		<% e_times[i][j]= responses[i]["courseSchedule"][j]["endTime"] %>
	<% end %>

<% end %>
<% if !days[0].blank? %>
    <% @current_courses.each_with_index do |curr, j| %>
		<% for k in 1..5 %>
			<% days[j].each_with_index do |day,l| %>
				<% day.each do |wday| %>
					<% same_day = false %>
					<% if wday == k %>
						<% same_day = true %>
						<% events[k-1].push("#{j}, #{l}") %> 
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
	<table style="layout: fixed">
		<tr>
			<th style = "width: 10%; text-align:center">Time</th>
			<th style = "width: 18%; text-align:center">Monday</th>
			<th style = "width: 18%; text-align:center">Tuesday</th>
			<th style = "width: 18%; text-align:center">Wednesday</th>
			<th style = "width: 18%; text-align:center">Thursday</th>
			<th style = "width: 18%; text-align:center">Friday</th>
		</tr>
		<% for i in 16..48 %>
		<tr>
			<td style="width: 10%; padding:5px; text-align:center ">
				<% if i%2 == 0 %>
			        <% if i >= 26 %>
    	                <%= ((i/2)-12).to_s + ":00" %>
				    <% else %>
						<%= (i/2).to_s + ":00" %>
					<% end %>
				<% else %>
					<% if i >= 26 %> 
						<%= ((i/2)-12).to_s + ":30" %>
					<% else %>
						<%= (i/2).to_s + ":30" %>
					<% end %>	
				<% end %>
			</td>
			<% for k in 1..5 %>
			    <% if events[k-1].blank? %>
			        <td style="width: 18%; border: 1px solid black;"> </td>
			    <% else %>
    	            <% events[k-1].each do |course|%>
    	                <% c_split = course.split(", ") %>
    			        <% if i%2 != 0 %>
    			            <% if s_times[c_split[0].to_i][c_split[1].to_i] == ((i/2).to_s+ ":30")%>
                                <td style="width: 18%; border:1px solid black; padding:5px"><%= @current_courses[c_split[0].to_i].split(" ")[2..4].join(" ") %></td>
                            <% else %>
                                <td style="width: 18%; border:1px solid black"></td>
                            <% end %>
                        <% end %>
                        <% if i%2 == 0 %>
                            <% if ((s_times[c_split[0].to_i][c_split[1].to_i].split(":")[0].to_i) +1) == (i/2) %>
                                 <td style="width: 18%; border:1px solid black; padding:5px"><%= @current_courses[c_split[0].to_i].split(" ")[2..4].join(" ") %></td>
                            <% else %>
                                <td style="width: 18%; border:1px solid black"></td>
                            <% end %>
                            
                        <% end %>
    			    <% end %>
    	        <% end %>
            <% end %>
		</tr>
		<% end %>
	</table>
<% else %>
    <table>
		<tr>
			<th>Time</th>
			<th>Monday</th>
			<th>Tuesday</th>
			<th>Wednesday</th>
			<th>Thursday</th>
			<th>Friday</th>
		</tr>
		<% for i in 16..48 %>
		<tr>
			<td style="width: 10%; padding:5px; text-align:center">
				<% if i%2 == 0 %>
				  <% if i >= 26 %>
						<%= ((i/2)-12).to_s + ":00" %>
					<% else %>
						<%= (i/2).to_s + ":00" %>
					<% end %>
				<% else %>
					<% if i >= 26 %> 
						<%= ((i/2)-12).to_s + ":30" %>
					<% else %>
						<%= (i/2).to_s + ":30" %>
					<% end %>	
				<% end %>
			</td>
		</tr>
		<% end %>
	</table>
<% end %>
